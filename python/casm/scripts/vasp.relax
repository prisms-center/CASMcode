#!/usr/bin/env python
import casm
import casm.vaspwrapper
import sys

print "Begin vasp.relax"

if len(sys.argv) != 2:
    print "Usage: vasp.relax configdir"
    sys.exit()

configdir = sys.argv[1]

relaxation = casm.vaspwrapper.Relax(configdir)

print "Submitting..."
relaxation.submit()

print "Finish vasp.relax\n\n"

